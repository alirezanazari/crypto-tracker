<resources>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppMainList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppSplashLogo">
        <item name="android:layout_width">@dimen/image_size_splash</item>
        <item name="android:layout_height">@dimen/image_size_splash</item>
        <item name="android:src">@drawable/ic_bitcoin</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppSplashLogoName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/text_size_splash_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="AppSplashLogoVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_splash_secondary</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
    </style>

    <style name="AppCurrencyItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppCurrencyItemTextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppCurrencyItemTextPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppCurrencyItemTextSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppImageEmptyMessage">
        <item name="android:layout_width">@dimen/image_size_empty_message</item>
        <item name="android:layout_height">@dimen/image_size_empty_message</item>
        <item name="android:src">@drawable/ic_error_outline</item>
        <item name="android:tint">?attr/colorTextPrimary</item>
    </style>

    <style name="AppProgressBarEmptyMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
